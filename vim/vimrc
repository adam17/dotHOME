let $RTP=split(&runtimepath, ',')[0]
let $RC="$HOME/.vimrc"

filetype plugin indent on
syntax on
set nocompatible
set backspace=2
set hidden
set noswapfile
set ruler
set number
set fileencoding=utf-8
set enc=utf-8
set spell
set spelllang=en,pl
set laststatus=2
set path=.,**
set incsearch
set textwidth=81 tabstop=4 shiftwidth=4 softtabstop=4 expandtab autoindent smartindent
set list
set colorcolumn=81
set nowrap
set hlsearch
set listchars+=tab:>--
set relativenumber
set wildmenu
"set paste
set sidescroll=2

hi ColorColumn ctermbg=red ctermfg=white
hi Comment ctermfg=196 ctermbg=0

let g:vimwiki_list = [{'path': '~/Documents/vimwiki/', 'syntax': 'markdown', 'ext': '.md'}] " needed vimwiki for this!

map <C-s> :w<CR>
imap <C-s> <esc>:w<cr>i<right>

"inoremap " ""<left>
"inoremap ' ''<left>
"inoremap ( ()<left>
"inoremap [ []<left>
"inoremap { {}<left>
inoremap {<CR> {<CR>}<ESC>O
inoremap {;<CR> {<CR>};<ESC>O

inoremap ,html<cr> <esc>:-1r /Users/adam/.vim/template/html.txt<cr>
inoremap ,css<cr> <esc>:-1r /Users/adam/.vim/template/css.txt<cr>

let g:slimv_preferred = 'clisp'
